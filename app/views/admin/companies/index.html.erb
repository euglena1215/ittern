<h1>企業一覧</h1>

<table>
  <thead>
    <tr>
      <th><%= Company.human_attribute_name('name') %></th>
      <th><%= Company.human_attribute_name('url') %></th>
      <th><%= Company.human_attribute_name('address') %></th>
      <th><%= Company.human_attribute_name('tag_list') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= link_to company.url, company.url %></td>
        <td><%= company.address %></td>
        <td><%= company.tag_list %></td>
        <td><%= link_to '詳細', admin_company_path(company) %></td>
        <td><%= link_to '編集', edit_admin_company_path(company) %></td>
        <td><%= link_to '削除', admin_company_path(company), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

